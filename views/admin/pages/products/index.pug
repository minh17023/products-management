extends ../../layouts/default.pug

block main 
    .container.mt-5
      h1 Danh sách sản phẩm
      table.table.table-striped
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Trạng thái
            th Hành động
        tbody
        each item, index in products
          tr
            td #{index + 1}
            td
              img(src=item.thumbnail, alt=item.title, width="50", height="50")
            td #{item.title}
            td #{item.price}$
            td.state-column
              if(item.status == "active")
                span.badge.badge-success Hoạt động
              else 
                span.badge.badge-danger Dừng hoạt động
            td
              button.btn.btn-warning Sửa
              button.btn.btn-danger Xóa
